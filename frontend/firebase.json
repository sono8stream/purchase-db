{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "getPrices",
        "function": "getPrices"
      },
      {
        "source": "getMetaInfo",
        "function": "getMetaInfo"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
